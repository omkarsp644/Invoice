<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/relativeCOntent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_margin="30sp"
        android:id="@+id/Print"
        app:cardElevation="30sp"
        app:cardBackgroundColor="@android:color/holo_red_light"
        app:cardCornerRadius="30sp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_margin="10sp"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:text="Share Image"/>
    </androidx.cardview.widget.CardView>
    <ScrollView xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.Activities.GenerateInvoice">
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/PrintScreen"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">
                <TextView
                    android:layout_width="0sp"
                    android:layout_weight="0.5"
                    android:layout_margin="5sp"
                    android:textSize="20sp"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:layout_height="wrap_content"
                    android:text="SVOT Technologies"/>
                <TextView
                    android:layout_width="0sp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:text="Invoice"
                    android:layout_margin="5sp"
                    android:gravity="end"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">
                <TextView
                    android:layout_width="0sp"
                    android:layout_weight="0.5"
                    android:layout_margin="5sp"
                    android:textSize="10sp"
                    android:textColor="@android:color/holo_red_light"
                    android:layout_height="wrap_content"
                    android:text="SVOT Technologies"/>
                <TextView
                    android:layout_width="0sp"
                    android:layout_weight="0.5"
                    android:textSize="12dp"
                    android:layout_height="wrap_content"
                    android:text="#5596"
                    android:layout_margin="5sp"
                    android:gravity="end"/>
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_marginStart="5sp"
                android:layout_marginTop="30sp"
                android:textSize="15sp"
                android:layout_height="wrap_content"
                android:text="SVOT Technologies"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">
                <TextView
                    android:layout_width="0sp"
                    android:layout_weight="0.5"
                    android:layout_margin="5sp"
                    android:textSize="10sp"
                    android:layout_height="wrap_content"
                    android:text="@string/demo_addr"/>
                <View
                    android:layout_width="0sp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"
                    android:gravity="end"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">
                <TextView
                    android:layout_width="0sp"
                    android:layout_weight="0.2"
                    android:layout_margin="5sp"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Date :"/>
                <TextView
                    android:layout_width="0sp"
                    android:layout_weight="0.2"
                    android:layout_margin="5sp"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="CartId :"/>
                <TextView
                    android:layout_width="0sp"
                    android:layout_weight="0.2"
                    android:layout_margin="5sp"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Valid Upto :"/>

                <View
                    android:layout_width="0sp"
                    android:layout_weight="0.4"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"
                    android:gravity="end"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">
                <TextView
                    android:layout_width="0sp"
                    android:layout_weight="0.2"
                    android:layout_margin="5sp"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:text="30/01/2021"/>
                <ImageView
                    android:layout_width="0sp"
                    android:layout_weight="0.2"
                    android:layout_margin="5sp"
                    android:textSize="12sp"
                    android:src="@drawable/qrexample"
                    android:layout_height="50sp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="0sp"
                    android:layout_weight="0.2"
                    android:layout_margin="5sp"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="30 Days"/>

                <View
                    android:layout_width="0sp"
                    android:background="@color/black"
                    android:layout_weight="0.4"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"
                    android:gravity="end"/>
            </LinearLayout>
     <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:layout_margin="10sp"/>
            <TableLayout
                android:id="@+id/tableInvoice"
                android:layout_margin="10sp"
                android:animateLayoutChanges="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:stretchColumns="*"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:background="@color/black"
                android:layout_margin="10sp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">
                <TextView
                    android:layout_width="0sp"
                    android:text="Total Amount"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"/>
                <TextView
                    android:layout_width="0sp"
                    android:text="1000"
                    android:id="@+id/TotalAmount"
                    android:textColor="@android:color/background_dark"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">
                <TextView
                    android:layout_width="0sp"
                    android:text="Tax Rate"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"/>
                <TextView
                    android:layout_width="0sp"
                    android:text="0.18%"
                    android:textColor="@android:color/background_dark"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/TaxPer"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">
                <TextView
                    android:layout_width="0sp"
                    android:text="Tax Amount"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"/>
                <TextView
                    android:layout_width="0sp"
                    android:text="180"
                    android:textColor="@android:color/background_dark"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/TaxAmount"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"/>
            </LinearLayout>
            <View
                android:layout_width="250sp"
                android:background="@color/black"
                android:layout_gravity="end"
                android:layout_height="1sp"
                android:layout_margin="10sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">
                <TextView
                    android:layout_width="0sp"
                    android:text="Total Payable"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"/>
                <TextView
                    android:layout_width="0sp"
                    android:text="1180"
                    android:textColor="@android:color/background_dark"
                    android:layout_gravity="center"
                    android:id="@+id/TotalPayAmount"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:background="@color/black"
                android:layout_height="1sp"
                android:layout_margin="10sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Terms"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Please pay the amount within 15 days of invoice created.."
                />


        </LinearLayout>
    </ScrollView>
</RelativeLayout>