<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_margin="10sp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:layout_margin="5sp"
        app:cardCornerRadius="10sp"
        app:cardElevation="20sp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20sp"
            android:orientation="horizontal"
            android:weightSum="1">
            <TextView
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:text="2"
                android:id="@+id/adapter_index"
                android:textColor="@android:color/holo_red_light"
                android:layout_gravity="center"
                android:gravity="center"/>

            <TextView
                android:layout_width="0sp"
                android:layout_height="20sp"
                android:id="@+id/adapter_ProductName"
                android:layout_weight="0.4"
                android:text="Maggie Masala"
                android:layout_gravity="center"
                android:gravity="center"/>

            <TextView
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:text="100.0"
                android:id="@+id/adapter_price"
                android:layout_gravity="center"
                android:gravity="center"/>

            <TextView
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:text="2"
                android:id="@+id/adapter_count"
                android:layout_gravity="center"
                android:gravity="center"/>
            <TextView
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:text="200"
                android:id="@+id/adapter_totalPrice"
                android:textColor="@android:color/holo_red_light"
                android:layout_gravity="center"
                android:gravity="center"/>
            <ImageView
                android:layout_width="0sp"
                android:id="@+id/deleteRecord"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:foregroundGravity="center"
                android:src="@drawable/delete"
                android:layout_gravity="center" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>