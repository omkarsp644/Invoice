<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardElevation="20sp"
        app:cardCornerRadius="30sp"
        android:layout_margin="20sp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="30sp"
                android:id="@+id/close"
                android:layout_height="30sp"
                android:layout_marginEnd="5sp"
                android:layout_marginTop="5sp"
                android:layout_gravity="end"
                android:src="@drawable/close"/>
            <ImageView
                android:src="@drawable/invoice"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="30sp"
                android:layout_height="wrap_content"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:background="@color/black"
                android:layout_margin="10sp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">
                <TextView
                    android:layout_width="0sp"
                    android:text="Total Amount"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"/>
                <TextView
                    android:layout_width="0sp"
                    android:text="1000"
                    android:id="@+id/Amountdetails"
                    android:textColor="@android:color/background_dark"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">
                <TextView
                    android:layout_width="0sp"
                    android:text="Tax Rate"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"/>
                <TextView
                    android:layout_width="0sp"
                    android:text="0.18%"
                    android:textColor="@android:color/background_dark"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/TaxPerdetails"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">
                <TextView
                    android:layout_width="0sp"
                    android:text="Tax Amount"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"/>
                <TextView
                    android:layout_width="0sp"
                    android:text="180"
                    android:textColor="@android:color/background_dark"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/TaxAmountdetails"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"/>
            </LinearLayout>
            <View
                android:layout_width="250sp"
                android:background="@color/black"
                android:layout_gravity="end"
                android:layout_height="1sp"
                android:layout_margin="10sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">
                <TextView
                    android:layout_width="0sp"
                    android:text="Total Payable"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"/>
                <TextView
                    android:layout_width="0sp"
                    android:text="1180"
                    android:textColor="@android:color/background_dark"
                    android:layout_gravity="center"
                    android:id="@+id/TotalPayAmountdetails"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"/>
            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="300sp"
                app:cardElevation="30sp"
                android:layout_gravity="center"
                android:layout_marginStart="20sp"
                android:layout_marginEnd="20sp"
                android:layout_marginBottom="10sp"
                android:layout_marginTop="10sp"
                android:id="@+id/details_with"
                app:cardCornerRadius="30sp"
                app:cardBackgroundColor="@color/purple_500"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:textColor="@color/white"
                    android:layout_margin="10sp"
                    android:layout_height="wrap_content"
                    android:text="Create Bill With Invoice"/>
            </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="-------------------- or ---------------------"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="5sp"/>
            <androidx.cardview.widget.CardView
                android:layout_width="300sp"
                app:cardElevation="30sp"
                android:layout_gravity="center"
                android:layout_marginStart="20sp"
                android:layout_marginEnd="20sp"
                app:cardCornerRadius="30sp"
                android:id="@+id/details_withount"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@android:color/holo_red_dark"
                    android:text="Save Bill"/>
        </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Note : You can create Invoice after Using Previous Invoices Tab"
                android:layout_margin="10sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@android:color/holo_blue_dark"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>